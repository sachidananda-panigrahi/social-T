<Page loaded="pageLoaded" xmlns:drawer="nativescript-telerik-ui/sidedrawer" xmlns="http://www.nativescript.org/tns.xsd">
    <ActionBar title="SocialText">
        <android>
            <NavigationButton icon="res://ic_menu" tap="showSideDrawer"/>
        </android>
        <ActionBar.actionItems>
            <ios>
                <ActionItem icon="res://ic_menu" ios.position="left" tap="showSideDrawer"/>
            </ios>
        </ActionBar.actionItems>
    </ActionBar>
    <drawer:RadSideDrawer id="sideDrawer"
                          drawerClosed="onDrawerClosed"
                          drawerClosing="onDrawerClosing"
                          drawerOpened="onDrawerOpened"
                          drawerOpening="onDrawerOpening">
        <drawer:RadSideDrawer.mainContent>
            <StackLayout>
                <Label text="Drawer notification: "/>
                <Label text=""/>
            </StackLayout>
        </drawer:RadSideDrawer.mainContent>
        <drawer:RadSideDrawer.drawerContent>
            <StackLayout cssClass="drawerContent">
                <StackLayout cssClass="headerContent">
                    <!--<Label text="Header" padding="10"/>-->
                </StackLayout>
                <StackLayout cssClass="drawerMenuContent">
                    <!--<Border borderWidth="1" borderColor="#dadada"></Border>-->
                    <ListView items="{{ menuOption }}" id="menuOption" itemTap="listViewItemTap">
                        <ListView.itemTemplate>
                            <GridLayout>
                                <Label text="{{ name }}" margin="10"/>
                            </GridLayout>
                        </ListView.itemTemplate>
                    </ListView>
                    <Border borderWidth="1" borderColor="#dadada"></Border>
                </StackLayout>
            </StackLayout>
        </drawer:RadSideDrawer.drawerContent>
    </drawer:RadSideDrawer>
</Page>